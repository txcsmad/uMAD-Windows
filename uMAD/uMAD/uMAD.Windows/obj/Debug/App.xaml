<Application
    x:Class="uMAD.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:uMAD"
    xmlns:helpers="using:uMAD.Helpers">
    <Application.Resources>
        <helpers:ScheduleDateConverter x:Key="StringFormatConverter"/>
        <helpers:CapitalConverter x:Key="CapitalConverter"/>
        <helpers:RelativeDateTimeConverter x:Key="RelativeTweetDateConverter"/>
        <Color x:Key="MADColor">#FFB10F</Color>
        <SolidColorBrush Color="{StaticResource MADColor}" x:Key="MADBrush"/>
        <helpers:ValueWhenConverter x:Key="BooleanToVisibilityConverter">
            <helpers:ValueWhenConverter.When>
                <x:Boolean>True</x:Boolean>
            </helpers:ValueWhenConverter.When>
            <helpers:ValueWhenConverter.Value>
                <Visibility>Visible</Visibility>
            </helpers:ValueWhenConverter.Value>
            <helpers:ValueWhenConverter.Otherwise>
                <Visibility>Collapsed</Visibility>
            </helpers:ValueWhenConverter.Otherwise>
            <helpers:ValueWhenConverter.OtherwiseValueBack>
                <x:Boolean>False</x:Boolean>
            </helpers:ValueWhenConverter.OtherwiseValueBack>
        </helpers:ValueWhenConverter>
        <helpers:ValueWhenConverter x:Key="InverseBooleanToVisibilityConverter">
            <helpers:ValueWhenConverter.When>
                <x:Boolean>False</x:Boolean>
            </helpers:ValueWhenConverter.When>
            <helpers:ValueWhenConverter.Value>
                <Visibility>Visible</Visibility>
            </helpers:ValueWhenConverter.Value>
            <helpers:ValueWhenConverter.Otherwise>
                <Visibility>Collapsed</Visibility>
            </helpers:ValueWhenConverter.Otherwise>
            <helpers:ValueWhenConverter.OtherwiseValueBack>
                <x:Boolean>True</x:Boolean>
            </helpers:ValueWhenConverter.OtherwiseValueBack>
        </helpers:ValueWhenConverter>
    </Application.Resources>
</Application>
































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































