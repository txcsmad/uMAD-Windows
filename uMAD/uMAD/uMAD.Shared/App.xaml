<Application
    x:Class="uMAD.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:uMAD"
    xmlns:helpers="using:uMAD.Helpers">
    <Application.Resources>
        <helpers:ScheduleDateConverter x:Key="StringFormatConverter"/>
        <helpers:CapitalConverter x:Key="CapitalConverter"/>
        <helpers:RelativeDateTimeConverter x:Key="RelativeTweetDateConverter"/>
        <Color x:Key="MADColor">#FFB10F</Color>
        <SolidColorBrush Color="{StaticResource MADColor}" x:Key="MADBrush"/>
    </Application.Resources>
</Application>
